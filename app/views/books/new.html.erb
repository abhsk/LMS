<h2>New Book<h2>

<%=flash_message%>

<%=form_for @book, url: books_path, method: :post do |f| %>
	<div>
		<%= f.label :title, 'Title:'%>
		<%= f.text_field :title%>
	</div>
	<div>
		<%= f.label :author, 'Author:'%>
		<%= f.text_field :author%>
	</div>
	<div>
		<%= f.label :isbn, 'Isbn:'%>
		<%= f.text_field :isbn%>
	</div>
	<div>
		<%= submit_tag "Submit"%>
	</div>	

<%-end%>